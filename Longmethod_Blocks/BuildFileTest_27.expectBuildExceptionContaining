void#expectBuildExceptionContaining#(#String#target#,#String#cause#,#String#contains#)#{#try#{#executeTarget#(#target#)#;#}##catch#(#org#.#apache#.#tools#.#ant#.#BuildException#ex#)#{#buildException#=#ex#;##if#(#(#null#!=#contains#)#&&#(#ex#.#getMessage#(#)#.#indexOf#(#contains#)#==#-#1#)#)#{#fail#(#"Should throw BuildException because '"#+#cause#+#"' with message containing '"#+#contains#+#"' (actual message '"#+#ex#.#getMessage#(#)#+#"' instead)"#)#;#}##return#;#}##fail#(#"Should throw BuildException because: "#+#cause#)#;#}