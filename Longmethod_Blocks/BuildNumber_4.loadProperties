Properties#loadProperties#(#)#throws#BuildException#{#FileInputStream#input#=#null#;##try#{#final#Properties#properties#=#new#Properties#(#)#;#input#=#new#FileInputStream#(#myFile#)#;#properties#.#load#(#input#)#;##return#properties#;#}##catch#(#final#IOException#ioe#)#{#throw#new#BuildException#(#ioe#)#;#}##finally#{##if#(#null#!=#input#)#{#try#{#input#.#close#(#)#;#}##catch#(#final#IOException#ioe#)#{#log#(#"error closing input stream "#+#ioe#,#Project#.#MSG_ERR#)#;#}#}#}#}