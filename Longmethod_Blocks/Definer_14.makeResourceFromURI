String#makeResourceFromURI#(#String#uri#)#{#String#path#=#uri#.#substring#(#MagicNames#.#ANTLIB_PREFIX#.#length#(#)#)#;#String#resource#;##if#(#path#.#startsWith#(#"//"#)#)#{##//handle new style full paths to an antlib, in which##//all but the forward slashes are allowed.#resource#=#path#.#substring#(#"//"#.#length#(#)#)#;##if#(#!#resource#.#endsWith#(#".xml"#)#)#{##//if we haven't already named an XML file, it gets antlib.xml#resource#=#resource#+#ANTLIB_XML#;#}#}#else#{##//convert from a package to a path#resource#=#path#.#replace#(#'.'#,#'/'#)#+#ANTLIB_XML#;#}##return#resource#;#}