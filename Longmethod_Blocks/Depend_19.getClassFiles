Vector#getClassFiles#(#Path#classLocations#)#{##// break the classLocations into its components.#String#[#]#classLocationsList#=#classLocations#.#list#(#)#;#Vector#classFileList#=#new#Vector#(#)#;##for#(#int#i#=#0#;##i#<#classLocationsList#.#length#;#++#i#)#{#File#dir#=#new#File#(#classLocationsList#[#i#]#)#;##if#(#dir#.#isDirectory#(#)#)#{#addClassFiles#(#classFileList#,#dir#,#dir#)#;#}#}##return#classFileList#;#}