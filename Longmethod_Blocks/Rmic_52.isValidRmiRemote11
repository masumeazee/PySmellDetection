boolean#isValidRmiRemote#(#String#classname#)#{#try#{#Class#testClass#=#loader#.#loadClass#(#classname#)#;##// One cannot RMIC an interface for "classic" RMI (JRMP)##if#(#testClass#.#isInterface#(#)#&&#!#iiop#&&#!#idl#)#{##return#false#;#}##return#isValidRmiRemote#(#testClass#)#;#}##catch#(#ClassNotFoundException#e#)#{#log#(#ERROR_UNABLE_TO_VERIFY_CLASS#+#classname#+#ERROR_NOT_FOUND#,#Project#.#MSG_WARN#)#;#}##catch#(#NoClassDefFoundError#e#)#{#log#(#ERROR_UNABLE_TO_VERIFY_CLASS#+#classname#+#ERROR_NOT_DEFINED#,#Project#.#MSG_WARN#)#;#}##catch#(#Throwable#t#)#{#log#(#ERROR_UNABLE_TO_VERIFY_CLASS#+#classname#+#ERROR_LOADING_CAUSED_EXCEPTION#+#t#.#getMessage#(#)#,#Project#.#MSG_WARN#)#;#}##// we only get here if an exception has been thrown##return#false#;#}