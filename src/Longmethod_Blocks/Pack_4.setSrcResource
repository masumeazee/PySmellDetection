void#setSrcResource#(#Resource#src#)#{##if#(#src#.#isDirectory#(#)#)#{#throw#new#BuildException#(#"the source can't be a directory"#)#;#}##FileProvider#fp#=#(#FileProvider#)#src#.#as#(#FileProvider#.#class#)#;##if#(#fp#!=#null#)#{#source#=#fp#.#getFile#(#)#;#}#else##if#(#!#supportsNonFileResources#(#)#)#{#throw#new#BuildException#(#"Only FileSystem resources are supported."#)#;#}##this#.#src#=#src#;#}